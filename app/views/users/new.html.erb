<%=form_with model: @user do |f| %>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <ul>
      <li><%= message %></li>
      </ul>
    <% end %>
  <% end %>
  
  <%= f.label :username%>
  <%= f.text_field :username %><br><br>

  <%= f.label :email%>
  <%= f.text_field :email, :value=>"example@example.com" %><br><br>

  <%= f.label :password%>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Submit" %>
<% end %>
